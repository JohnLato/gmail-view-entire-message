{
    "name" : "GMail view entire message",
    "version" : "0.1",
    "description" : "Display a 'view entire message' link at the top of long emails in GMail",
    "content_scripts" : [
	{
	    "matches" : [
		"http://mail.google.com/*",
		"https://mail.google.com/*"
	    ],
	    "js" : ["contentscript.js"],
	    "run_at" : "document_idle",
	    "all_frames" : false
	}
    ],
    "permissions" : [
	"tabs",
	"http://mail.google.com/*",
	"https://mail.google.com/*"
    ],
    "manifest_version" : 1
}
